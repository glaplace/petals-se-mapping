<?xml version="1.0" encoding="UTF-8"?>
<!-- 
	JBI descriptor for the Petals' "petals-se-pojo" component (POJO).
	Originally created for the version 2.2 of the component.
 -->
<jbi:jbi version="1.0"
   xmlns:gedService="http://service.server.ged.mapping.samples.petals.ow2.org/"
   xmlns:jbi="http://java.sun.com/xml/ns/jbi"
   xmlns:petalsCDK="http://petals.ow2.org/components/extensions/version-5"
   xmlns:soap="http://petals.ow2.org/components/soap/version-4"
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	
   <!-- Import a Service into Petals or Expose a Petals Service => use a BC. -->
   <jbi:services binding-component="false">
	
	  <!-- Import a Service into Petals => provides a Service. -->
      <jbi:provides interface-name="gedService:GedService" service-name="gedService:GedService"
         endpoint-name="autogenerate">
	
		 <!-- CDK specific elements -->
         <petalsCDK:timeout>30000</petalsCDK:timeout>
         <petalsCDK:validate-wsdl>true</petalsCDK:validate-wsdl>
         <petalsCDK:forward-security-subject>false</petalsCDK:forward-security-subject>
         <petalsCDK:forward-message-properties>false</petalsCDK:forward-message-properties>
         <petalsCDK:forward-attachments>false</petalsCDK:forward-attachments>
         <petalsCDK:wsdl>gedService.wsdl</petalsCDK:wsdl>
      
         <!-- Component specific elements -->
         <soap:address>http://localhost:9000/gedService</soap:address>
         <soap:soap-version>1.1</soap:soap-version>
         <soap:chunked-mode>false</soap:chunked-mode>
         <soap:mode>SOAP</soap:mode>

      </jbi:provides>
   </jbi:services>
</jbi:jbi>